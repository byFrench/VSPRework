---
import Footer from "../../components/Footer.astro";
import Navbar from "../../components/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import E_Head from "../../components/Emissions/Head.astro";
import E_Video from "../../components/Emissions/Video.astro";

var eName = "Personal Journey";
var eResume = `L'émission se concentre sur les histoires de vie et les choix des invités, 
abordant souvent des sujets de société, des questions de mode, de beauté, de relations, et bien d'autres encore. 
Les invités sont invités à partager leur point de vue et à faire des choix personnels sur divers sujets. 
Elle a pour format d'être interactif et d’avoir des discussions animées.`
var ePartner = "";

var twitch = "https://www.twitch.tv/mr_kus_t";
var participate = "/participer/personal-journey";

const video = {
    single: {
        width: "450",
        height: "300"
    },
    playlist: {
        width: "600",
        height: "350"
    }
}
---

<Layout title={eName+" | Emissions | Virtual Show Production - Démonstration"} description="! Demonstration du nouveau code/design ce site n'est pas le réel VSP !">
    <Navbar />
    <E_Head 
        time="Tous les premiers Vendredi du mois"
        name={eName}
        resume={eResume}
        twitch={twitch}
        participate={participate}
        partner={ePartner}
    />
    <p class="text-2xl text-center align-center mt-10">Les 2 dernières sorties</p>
    <div class="flex flex-nowrap justify-center mb-15">
        <E_Video 
            id="dND3zGosiUA"
            width={video.single.width}
            height={video.single.height}
        />
        <E_Video 
            id="rp5XIDc7Foo"
            width={video.single.width}
            height={video.single.height}
        />
    </div>
    <Footer />
</Layout>