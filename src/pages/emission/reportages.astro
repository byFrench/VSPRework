---
import Footer from "../../components/Footer.astro";
import Navbar from "../../components/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import E_Head from "../../components/Emissions/Head.astro";
import E_Video from "../../components/Emissions/Video.astro";
import Partner from "../../components/Partner.astro";

var eName = "Reportages";
var eResume = "À travers ces différents reportages, vous découvrirez des communautés, des personnages, des événements qui sont en liens avec la réalité virtuelle.";
var ePartner = "";

var twitch = "";
var participate = "";

const video = {
    single: {
        width: "450",
        height: "300"
    },
    playlist: {
        width: "600",
        height: "350"
    }
}
---

<Layout title={eName+" | Emissions | Virtual Show Production - Démonstration"} description="! Demonstration du nouveau code/design ce site n'est pas le réel VSP !">
    <Navbar />
    <E_Head 
        time="Virtual Show Production"
        name={eName}
        resume={eResume}
        twitch={twitch}
        participate={participate}
        partner={ePartner}
    />
    <p class="text-2xl text-center align-center mt-10">Les 3 dernières sorties</p>
    <div class="flex flex-nowrap justify-center mb-5">
        <E_Video 
            id="o7TQzcODnio"
            width={video.single.width}
            height={video.single.height}
        />
        <E_Video 
            id="o7TQzcODnio"
            width={video.single.width}
            height={video.single.height}
        />
        <E_Video 
            id="o7TQzcODnio"
            width={video.single.width}
            height={video.single.height}
        />
    </div>
    <p class="text-2xl text-center align-center">La liste de nos anciennes sorties</p>
    <div class="flex justify-center text-center align-center mb-14" style="margin-left: 5.5rem !important;">
        <E_Video 
            id="o7TQzcODnio"
            width={video.playlist.width}
            height={video.playlist.height}
        />
    </div>
    <Partner />
    <Footer />
</Layout>